<BorderPane fx:id="bp" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finalfrontier.SettingsController">
   <center>
      <AnchorPane prefHeight="811.0" prefWidth="1358.0" styleClass="backdrop" stylesheets="@../style.css">
         <children>
            <Pane fx:id="slider" prefHeight="780.0" prefWidth="357.0" styleClass="backdrop" stylesheets="@../style.css">
               <children>
                  <VBox prefHeight="787.0" prefWidth="366.0">
                     <children>
                        <Button mnemonicParsing="false" onMouseClicked="#gameMode" prefHeight="279.0" prefWidth="278.0" styleClass="play" stylesheets="@../style.css" />
                        <Button mnemonicParsing="false" onMouseClicked="#settingsPage" prefHeight="290.0" prefWidth="285.0" styleClass="settings" stylesheets="@../style.css" />
                        <Button mnemonicParsing="false" onAction="#exitPage" prefHeight="270.0" prefWidth="279.0" styleClass="exit" stylesheets="@../style.css" />
                     </children>
                  </VBox>
               </children>
            </Pane>
            <ToggleButton fx:id="musicB" layoutX="398.0" layoutY="49.0" mnemonicParsing="false" onAction="#playHit" prefHeight="180.0" prefWidth="184.0" styleClass="music" stylesheets="@../style.css" />
            <Slider fx:id="volumeSlider" layoutX="564.0" layoutY="124.0" />
            <Ellipse fx:id="ellipse" fill="DODGERBLUE" layoutX="910.0" layoutY="387.0" radiusX="50.0" radiusY="71.0" stroke="BLACK" strokeType="INSIDE" />
            <ColorPicker fx:id="colorPicker" layoutX="988.0" layoutY="368.0" onAction="#handleColourPicker" />
            <ToggleButton layoutX="1173.0" layoutY="5.0" mnemonicParsing="false" prefHeight="150.0" prefWidth="175.0" styleClass="sound" stylesheets="@../style.css" />
            <ToggleButton layoutX="405.0" layoutY="306.0" mnemonicParsing="false" prefHeight="189.0" prefWidth="200.0" styleClass="sun" stylesheets="@../style.css" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
